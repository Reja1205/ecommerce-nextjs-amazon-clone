{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // ðŸ‘‡ Aliases (adjust based on your folder structure)
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },

    // ðŸ‘‡ So Next.js and ESLint work properly
    "plugins": [
      {
        "name": "next"
      }
    ],

    // ðŸ‘‡ So your custom type extensions like next-auth.d.ts are recognized
    "typeRoots": ["types", "./node_modules/@types"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts", // ðŸ‘ˆ include your custom type files
    "next.config.mjs"
  ],
  "exclude": ["node_modules"]
}
